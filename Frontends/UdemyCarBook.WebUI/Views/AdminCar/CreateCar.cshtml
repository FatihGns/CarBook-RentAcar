@model CreateCarDto
@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
              
                        <div class="card">
                            <div class="card-body">

                                <h4 class="card-title">Yeni Araç Girişi</h4>
                                <p class="card-subtitle mb-4">Araç ile bilgileri eksiksiz doldurmanız önemlidir.
                                    Veri girişlerinden sonra kaydet butonuna tıklayarak kaydetme işlemi tamamlayabilirisiniz</p>

                                <form method="post">
                                    <div class="form-group">
                                <label for="exampleInputBrand">Marka</label>
                                        @Html.DropDownListFor(x=>x.BrandID,(List<SelectListItem>)ViewBag.BrandValues,new {@class ="form-control"})

                        
                                    </div>
                                    <div class="form-group">
                                         <label for="exampleInputModel">Model</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model Girişi Yapınız">
                                    </div>
                            <div class="form-group">
                                <label for="exampleInputCoverImage">Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" id="exampleInputCoverImage" asp-for="CoverImageUrl" placeholder="Kapak Fotoğraf Linki Ekleyiniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputKm">Km</label>
                                <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Km Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTransmisson">Vites Türü</label>
                                <input type="text" class="form-control" id="exampleInputTransmisson" asp-for="Transmisson" placeholder="Model Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputSeat">Koltuk Sayısı</label>
                                <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Koltuk Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLuggage">Bagaj Sayısı</label>
                                <input type="number" class="form-control" id="exampleInputLuggage" asp-for="Luggage" placeholder="Bagaj Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFuel">Yakıt Türü</label>
                                <input type="text" class="form-control" id="exampleInputLuggage" asp-for="Fuel" placeholder="Yakıt Türü Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputBigImageUrl">Büyük Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" id="exampleInputBigImageUrl" asp-for="BigImageUrl" placeholder="Büyük Kapak Fotoğraf link giriniz">
                            </div>
                                    
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                                </form>

                            </div> <!-- end card-body-->
                        </div>

                 
                <!-- end card -->

            </div>
            <!-- end col -->



        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>


