@model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Markaları Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Arabalarla ilgili marka listesi,markalar üzerinde düzenleme 
                            ve bir markayı kaldırma işlemi buradan gerçekleştirebilirsiniz
                        </p>
                        <div class="table-responsive">
                            @if (Model == null || !Model.Any())
                            {
                                <div class="alert alert-warning">
                                    Herhangi bir Marka bulunmadı.
                                </div>
                            }
                            else
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Marka Adı</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                            <th>Markaya Ait Araçlar</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {


                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Name</td>
                                                <td><a href="/AdminBrand/RemoveBrand/@item.BrandID" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/AdminBrand/UpdateBrand/@item.BrandID" class="btn btn-outline-success">Güncelle</a></td>
                                                <td><a href="/AdminBrand/UpdateBrand/@item.BrandID" class="btn btn-outline-success">Markaya Ait Araçlar</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            <a href="/AdminBrand/CreateBrand/" class="btn btn-outline-primary">Yeni Marka Girişi</a>
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->

        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>
